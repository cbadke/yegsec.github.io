## -*- coding: utf-8 -*-
<%namespace name="base" file="base_helper.tmpl" import="*"/>

<%def name="html_header()">
    <header id="header">
      <div class="top">
        <div id="brand">
          <h1 class="name">
            <a href="${abs_link(_link("root", None, lang))}" title="${blog_title|h}" rel="home">
              % if show_blog_title:
              <span id="blog-title">${blog_title|h}</span>
              % endif
            </a>
          </h1>
          <span class="description">${blog_description|h}</span>
        </div>
        %if search_form:
        <div class="searchform" role="search">
          ${search_form}
        </div>
        %endif
      </div>
      <nav id="menu">
        <ul>
          %for url, text in navigation_links[lang]:
          % if isinstance(url, tuple):
          <li> ${text}
            <ul>
              %for suburl, text in url:
              % if rel_link(permalink, suburl) == "#":
              <li class="active"><a href="${permalink}">${text}<span class="sr-only"> ${messages("(active)", lang)}</span></a></li>
              %else:
              <li><a href="${suburl}">${text}</a></li>
              %endif
              %endfor
            </ul>
            % else:
            % if rel_link(permalink, url) == "#":
            <li class="active"><a href="${permalink}">${text}<span class="sr-only"> ${messages("(active)", lang)}</span></a></li>
            %else:
            <li><a href="${url}">${text}</a></li>
            %endif
            % endif
            %endfor
            ${template_hooks['menu']()}
            ${template_hooks['menu_alt']()}
        </ul>
      </nav>
    </header>
    ${template_hooks['page_header']()}
</%def>
